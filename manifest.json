{
    "manifest_version": 2,

    "name": "Mobster",
    "description": "Mobile site tester.",
    "version": "1.0",

    "permissions": [
        "tabs", 
        "debugger",
        "webRequest", "webRequestBlocking",  
        "cookies", 
        "http://m.globo.com/"
    ],

    "background": {
        "scripts": ["background.js"]
    },

    "browser_action": {
        "default_popup": "popup.html"
    }
}